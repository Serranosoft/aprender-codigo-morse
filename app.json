{
  "expo": {
    "jsEngine": "jsc",
    "name": "Codigo morse",
    "slug": "codigo-morse",
    "version": "1.1.4",
    "orientation": "portrait",
    "icon": "./assets/icono-morse-app.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-morse.png",
      "resizeMode": "contain",
      "backgroundColor": "#1D1F20"
    },
    "scheme": "codigo-morse",
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.paulaymanu113.morse",
      "buildNumber": "6",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "Permite a Código Morse acceder a tus fotos",
        "NSCameraUsageDescription": "Permite a Código Morse acceder al flash de la cámara para transmitir mensajes.",
        "NSMicrophoneUsageDescription": "Permite a Código Morse acceder al micrófono.",
        "NSUserTrackingUsageDescription": "Este identificador se utilizará para mostrarte anuncios personalizados y mejorar la relevancia de la publicidad que recibes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icono-morse-app.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "versionCode": 6,
      "package": "com.paulaymanu113.codigomorse"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-3738413299329691~2833775109",
          "iosAppId": "ca-app-pub-3738413299329691~2833775109",
          "delayAppMeasurementInit": true,
          "userTrackingUsageDescription": "This identifier will be used to deliver personalized ads to you."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "extraProguardRules": "-keep class com.google.android.gms.internal.consent_sdk.** { *; }"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permite a Código Morse acceder a tu cámara",
          "microphonePermission": "Permite a Código Morse acceder a tu microfono"
        }
      ],
      "expo-localization",
      [
        "expo-font",
        {
          "android": {
            "fonts": [
              {
                "fontFamily": "Regular",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/AncizarSans-Regular.ttf",
                    "weight": "400",
                    "style": "normal"
                  }
                ]
              },
              {
                "fontFamily": "Medium",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/AncizarSans-Medium.ttf",
                    "weight": "500",
                    "style": "normal"
                  }
                ]
              },
              {
                "fontFamily": "Bold",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/AncizarSans-Bold.ttf",
                    "weight": "600",
                    "style": "normal"
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": [
              "./assets/fonts/AncizarSans-Regular.ttf",
              "./assets/fonts/AncizarSans-Medium.ttf",
              "./assets/fonts/AncizarSans-Bold.ttf"
            ]
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification.png"
        }
      ],
      [
        "expo-tracking-transparency",
        {
          "userTrackingPermission": "This identifier will be used to deliver personalized ads to you."
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "41df4eb2-829f-4c7d-8fef-f9a7e12dcf43"
      }
    }
  }
}
